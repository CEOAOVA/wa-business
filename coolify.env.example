# Supabase (Base de datos - REQUERIDO)
USE_SUPABASE=true
DATABASE_URL=postgresql://user:pass@host:port/db
SUPABASE_URL=https://tu-proyecto.supabase.co
SUPABASE_ANON_KEY=tu_supabase_anon_key_aqui
SUPABASE_SERVICE_ROLE=tu_supabase_service_role_key_aqui

# Authentication & Security (REQUERIDO)
JWT_SECRET=tu_jwt_secret_super_seguro_256_bits_aqui
AUTHORIZED_USERS=admin@aova.mx,agente1@aova.mx
TEMP_PASSWORD=aova2024_secure
CORS_ORIGINS=https://dev-waprueba.aova.mx

# Frontend/Backend URLs (CRÍTICAS para CORS y WebSocket)
FRONTEND_URL=https://dev-waprueba.aova.mx
BACKEND_URL=https://dev-apiwaprueba.aova.mx
PUBLIC_URL=https://dev-apiwaprueba.aova.mx

# Authentication (Extended)
INITIAL_ADMIN_EMAIL=admin@aova.mx
INITIAL_ADMIN_PASSWORD=Agente2024!
ENABLE_WEBHOOK_SIGNATURE=true

# External APIs (OPCIONAL)
API_NINJAS_KEY=tu_api_ninjas_key_aqui

# System Configuration
LOG_LEVEL=info
ENABLE_DETAILED_LOGS=false
NODE_ENV=production

# Rate Limiting (Configuración optimizada para producción)
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=300
RATE_LIMIT_AUTH_MAX=20
RATE_LIMIT_WEBHOOK_WINDOW=60000
RATE_LIMIT_WEBHOOK_MAX=200

# Performance & Optimization (CRÍTICAS)
USE_DIRECT_SUPABASE=true
USE_OPTIMIZED_QUERIES=true
USE_BATCH_OPERATIONS=true
USE_CIRCUIT_BREAKER=true
ENABLE_PERFORMANCE_METRICS=true
ROLLBACK_THRESHOLD=10
PERFORMANCE_MONITOR_INTERVAL=60000

# Memory Management (CRÍTICAS)
MAX_MEMORY_USAGE=80
CRITICAL_MEMORY_USAGE=95
MEMORY_CHECK_INTERVAL=60000
CACHE_MAX_SIZE=1000

# Database Configuration (Extended)
SUPABASE_POOLING=true
SUPABASE_MAX_CONNECTIONS=10

# SOAP Configuration (Extended)
SOAP_CONNECTION_RETRIES=3
LLM_TIMEOUT_MS=60000

# ========================================
# FRONTEND CONFIGURATION
# ========================================

