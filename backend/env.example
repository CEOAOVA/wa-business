# ============================================
# CONFIGURACIÓN BÁSICA
# ============================================
NODE_ENV=development
PORT=3002
FRONTEND_URL=http://localhost:5173

# ============================================
# SUPABASE (BASE DE DATOS)
# ============================================
SUPABASE_URL=https://tu-proyecto.supabase.co
SUPABASE_ANON_KEY=tu_anon_key
SUPABASE_SERVICE_ROLE_KEY=tu_service_role_key

# ============================================
# JWT (AUTENTICACIÓN) - ACTUALIZADO
# ============================================
# Access token secret (generar con: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))")
JWT_SECRET=tu_jwt_secret_super_seguro_256_bits

# Refresh token secret (DEBE ser diferente al JWT_SECRET)
JWT_REFRESH_SECRET=tu_jwt_refresh_secret_diferente_256_bits

# Tiempos de expiración
JWT_EXPIRES_IN=15m              # Access token: 15 minutos
JWT_REFRESH_EXPIRES_IN=7d       # Refresh token: 7 días

# ============================================
# WHATSAPP BUSINESS API
# ============================================
WHATSAPP_ACCESS_TOKEN=tu_whatsapp_access_token
WHATSAPP_PHONE_NUMBER_ID=tu_phone_number_id
WEBHOOK_VERIFY_TOKEN=tu_webhook_verify_token
WHATSAPP_API_VERSION=v22.0
WHATSAPP_BASE_URL=https://graph.facebook.com

# ============================================
# OPENROUTER AI (CHATBOT)
# ============================================
OPENROUTER_API_KEY=sk-or-v1-tu_openrouter_api_key
OPENROUTER_MODEL=google/gemini-2.5-flash-lite-preview-06-17
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1

# ============================================
# CORS Y SEGURIDAD
# ============================================
CORS_ORIGINS=http://localhost:5173
CORS_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_CREDENTIALS=true

# ============================================
# LOGGING
# ============================================
LOG_LEVEL=info
ENABLE_DETAILED_LOGS=false

# ============================================
# CREDENCIALES INICIALES (CAMBIAR EN PRODUCCIÓN)
# ============================================
# Admin inicial - usar contraseña segura en producción
INITIAL_ADMIN_EMAIL=admin@example.com
INITIAL_ADMIN_PASSWORD=AdminSecurePassword123!

# ============================================
# RATE LIMITING
# ============================================
RATE_LIMIT_WINDOW_MS=60000      # 1 minuto
RATE_LIMIT_MAX_REQUESTS=100     # Máximo de requests por ventana

# ============================================
# OPCIONAL: REDIS (para caché y sesiones)
# ============================================
# REDIS_URL=redis://localhost:6379
# REDIS_PASSWORD=tu_redis_password

# ============================================
# OPCIONAL: MONITOREO
# ============================================
# SENTRY_DSN=https://tu-sentry-dsn
# NEW_RELIC_LICENSE_KEY=tu-new-relic-key
